.about-me
	padding: 1% 0%
	background-color: #f63e7c
	position: relative
	.slider
		position: relative
		overflow: hidden
		box-sizing: border-box
		color: #fff
		height: 103vh
		min-height: 340px
		.slider_control
			width: 1.5rem
			height: 1.5rem
			display: block
			border-radius: 50%
			cursor: pointer
			text-indent: -9999px
			background-color: #fff
			transition: transform .2s ease-out
			position: absolute
			margin-left: -.75rem
			bottom: 3rem
			z-index: 5
			&:nth-of-type(1)
				left: 40%
			&:nth-of-type(2)
				left: 45%
			&:nth-of-type(3)
				left: 50%
			&:nth-of-type(4)
				left: 55%
			&:nth-of-type(5)
				left: 60%
			&:nth-of-type(6)
				left: 65%
		.slider_switch
			position: absolute
			top: 0
			left: -9999px
			&:focus + .slider_control, &:checked + .slider_control
				background-color: #C2185B
			&:focus + .slider_control, &:checked + .slider_control, &:hover + .slider_control
				transform: scale(1.3)
		.about-me__character
			width: 100%
			height: 100%
			margin: auto
			margin: 60px auto
			border-radius: 15px
			//position: relative
			overflow: hidden
			@media screen and (max-width: 768px) and (min-width: 300px)
				margin: 0% auto
				width: 100%
			/*@media screen and (max-width: 554px)
				overflow-y: visible !important
				overflow-x: hidden !important*/
				//overflow: hidden
			article
				height: 100%
				width:100%
				position: absolute
				top: 0
				//left: 100%
				/*z-index: 3
				background-size: cover
				background-position: 50% 50%
				padding: 8em 1em 0
				opacity: 0
				transition: left 0s .75s, opacity .5s
				margin: 2% auto
				border-radius: 5px
				min-width: 300px*/
				
					//padding: 0em 1em 0
					//margin-bottom: 0%
				/*@media only screen and (min-width: 400px)
					left: 0*/
			.experince
				overflow-y: scroll
				height: 50%
				@media screen and (max-width: 974px) and (max-height: 680px)
					height: 55%
				@media screen and (max-width: 768px) and (min-width: 300px)
					height: 100%
					overflow: visible
				.scroll-down
					width: 35px
					height: 35px
					border: 2px solid #FFF
					position: absolute
					border-radius: 50%
					left: calc(50% - 100px)
					z-index: 5
					&:hover
						cursor: pointer
					&:before
						content: ""
						position: absolute
						width: 10px
						height: 10px
						border-right: 2px solid #FFF
						border-bottom: 2px solid #FFF
						transform: rotate(45deg)
						display: block
						top: calc(50% - 7px)
						left: 11px
						&:hover
							cursor: pointer
			.about-me__myself
				border-radius: 0
				h2
					margin-top: 40px
					color: blanco
				.about-me__name
					span
						color: palette-rosa3
						font-size: 35px
					h2
						margin: 10px auto
						width: 51%
						border-bottom: 3px solid palette-rosa3
						line-height: 50px
						
					h3
						margin: 10px 0
					h2,h3
						color: #FFF
						text-align: center
					p
						color: #FFF
						text-align: justify
						padding: 0% 5%
						&:nth-of-type(1)
							text-align: center
						/*@media screen and (max-width: 550px)
							font-size: 14px
							width: 90%
							margin: 0 auto
							display: block
							text-align: center
							padding: 0px*/
							
					@media screen and (max-width: 550px)
						margin-top: 200px
					@media screen and (min-width: 350px)
						margin-top: 100px	
				.photograph
					position: absolute
					width: 200px
					height: 200px
					z-index: 1
					opacity: 1
					margin: 0px auto
					left: 0px
					right: 0px
					top: 0px
					border-radius: 25px
					@media screen and (max-width: 768px) and (min-width: 300px)
						top: 0px
					@media screen and (width: 768px) and (height: 1024px)
						top: 0px
					@media screen and (max-width: 767px)
						top: 0px
					&:after
						content: ""
						position: absolute
						width: 200px
						height: 200px
						left: 0
						transform: rotate(45deg)
						opacity: 1
						border-radius: 25px
					img
						display: block
						height: 200px
						width: 200px
						position: absolute
						z-index: 1
						top: 10px
						right: 0
						left: 0
						border-radius: 50%
						margin: 0 auto
						border: 6px solid #FFF
						
			article
				h2
					font-size: 30px
					color: palette-rosa3
					margin: 30px 0
					@media screen and (max-width: 768px) and (min-width: 300px)
						text-align: center
					&:nth-of-type(1)
						font-family:'Poiret One', cursive;
						font-weight: 100
				h3
					color: #FFF
			
				.about-me__technologies
					width: 100%
					min-height: 50px
					margin: 0 auto
					#js, #php, #tools, #ctools, #css, #html, #version
						display: none
					.npm, .stylus
						img
							width: 70%
					section
						width: 100%
						div
							width: calc(100% / 4)
							margin: 0px 
							min-width: 30px
							padding: 3px 5px
					div
						height: 50px
						padding: 10px
						width: calc(100%/4 - 35px)
						display: inline-block
						border-radius: 5px
						margin: 10px 5px
						vertical-align: middle
						min-width: 87px
						
						.icon-rotate
							transform: rotate(45deg)
							transition: .8s 
							line-height: 7px
						.icon-rotate-reset
							transform: rotate(0deg)
							transition: 1.2s 	
						span
							color: #FFF
							&:nth-of-type(1)
								font-size: 14px
								width: 75%
								line-height: 16px
								margin: 0px
								display: inline-block
								float: left
							&:nth-of-type(2)
								width: 10px
								display: inline-block
								float: left
								cursor: pointer
						.icon-plus
							&:before
								color: palette-azul
							&:hover
								color: palette-rosa1
						@media screen and (max-width: 550px)
							width: 40%
						&:hover
							span
								color: palette-rosa1
								font-weight: bold
								font-size: 16px
								transition: color .3s
								
						i
							font-size: 35px
							text-align: center
							display:block
							margin: 0 auto
							&:before
								width: auto
						span
							text-align: center
							display: block
							margin: 0 auto
							float: right
							
				.about-me__languages
					width: 80%
					margin: 10px auto
					div
						display: inline-block
						vertical-align: middle
						margin: 5px 10px
						width: 100px
						height: 100px
						@media screen and (max-width: 500px)
							width: 90px
						p
							text-align: center
				&:nth-of-type(1)
					//min-height: 230px	
				&:nth-of-type(3)
					h2
						margin: 30px 88px
						@media screen and (max-width: 550px)
							margin: 30px 0px
				&:nth-of-type(4)
					p
						text-align: center
						padding: 0 80px
						@media screen and (max-width: 550px)
							padding: 0px
					h2
						margin: 30px 88px
						@media screen and (max-width: 550px)
							margin: 30px 0px
					.griglia-colonna:first-child
						margin-left: 10px
						@media screen and (max-width: 550px)
							margin-left: 0px
				&:nth-of-type(5)
					.griglia-riga:nth-of-type(1)
						margin-bottom: 35px
						@media screen and (max-width: 550px)
							margin-bottom: 25px
					.circle
						float: none
						margin: auto
						width: 180px
						height: 180px
						border-radius: 50%
						background: turquoise none repeat scroll 0% 0%
						position: relative
						h3
							position: absolute
							top: 40px
						p 
							position: absolute
							top: 90px
							left: 6px
					p:first-child
						text-align: justify
						padding: 0 15px
						margin: 0px 10px
					h2
						margin: 30px 88px
						@media screen and (max-width: 550px)
							margin: 30px 0px
				&:nth-of-type(6)
					min-height: 100px
					.item-expertise
						margin: 20px 0
					h3, p
						@media screen and (max-width: 500px)
							font-size: 13px
					h2
						margin: 30px 88px
						@media screen and (max-width: 550px)
							margin: 30px 0px
					ul
						li
							text-align: left
							padding: 0 10%
							color: blanco
							
				&:nth-of-type(7)
					height: auto
					min-height: initial
					div
						margin: 20px 0
					h3
						margin: 10px 0
						@media screen and (max-width: 500px)
							font-size: 13px
					span
						margin-bottom: 10px
						@media screen and (max-width: 500px)
							text-align: center
							font-size: 13px	
					p
						margin-top: 10px
						@media screen and (max-width: 500px)
							font-size: 13px	
			.abilities
				display: none		 
			.description
				width: 100%
				display: block
				@media screen and (max-width: 768px) and (min-width: 300px)
					width: 100%
					display: block
					ul
						display: block
				.icon-arrow-right
					&:before
						color: palette-verde
						margin-right: 5px 
			&:nth-of-type(1)
				p
					margin: 10px 0
					color: #FFF
					font-family: 'Work Sans', sans-serif
					font-weight: 400
				li
					margin: 20px 0 10px 0
					&:last-of-type
						margin-bottom: 20px
					
					a
						text-decoration: none
						color: #664C4B
				.icon-plus
					margin: 0px
					&:before
						color: rgb(213,83,145)
				.icon-minus
					margin: 0 5px 0
					&:before
						color: #3DBBED
	.slide-to-left
		perspective: 500px
		perspective-origin: center 75%
		.slider_switch
			&:nth-of-type(1):checked ~ .about-me__character
				transform: translate3d(0, 0, 0)
				article:nth-of-type(1)
					opacity: 1
			&:nth-of-type(2):checked ~ .about-me__character
				transform: translate3d(-100%, 0, 700px)
				//transform: translate3d(0, 0, 0)
				article:nth-of-type(2)
					opacity: 1
			&:nth-of-type(3):checked ~ .about-me__character
				transform: translate3d(-200%, 0, 1400px)
				//transform: translate3d(0, 0, 0)	
				article:nth-of-type(3)
					opacity: 1
			&:nth-of-type(4):checked ~ .about-me__character
				transform: translate3d(-300%, 0, 2100px)
				article:nth-of-type(4)
					opacity: 1
			&:nth-of-type(5):checked ~ .about-me__character
				transform: translate3d(-400%, 0, 2800px)
				article:nth-of-type(5)
					opacity: 1
			&:nth-of-type(6):checked ~ .about-me__character
				transform: translate3d(-500%, 0, 3500px)
				article:nth-of-type(6)
					opacity: 1
		.about-me__character
			transition: transform .4s
			transform-style: preserve-3d
			article
				opacity: 0
				transition: opacity .4s
				&:nth-of-type(1)
					transform: translate3d(0, 0, 0)
				&:nth-of-type(2)
					transform: translate3d(100%, 0, -700px)
				&:nth-of-type(3)
					transform: translate3d(200%, 0, -1400px)
				&:nth-of-type(4)
					transform: translate3d(300%, 0, -2100px)
				&:nth-of-type(5)
					transform: translate3d(400%, 0, -2800px)
				&:nth-of-type(6)
					transform: translate3d(500%, 0, -3500px)
			
				
		
		