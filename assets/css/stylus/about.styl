.about-me
	.heart
		display: none
		position: relative
		&__message
			position: absolute
			top: 50px
			left: 46px
			z-index: 1
			color: #FFF
			font-size: 18px;
			h2
				font-family: 'Indie Flower', cursive
		&:after,
		&:before
			position: absolute
			content: ""
			height: 139px
			width: 82px
			background: #F32458
			margin: 2px 10px
			transform: rotate(45deg)
			left: 91px
			border-radius: 0 10px
			border-radius: 38px 40px 0 0
		&:after
			left: 50px
			transform: rotate(-45deg)
			border-radius: 38px 40px 0 0
	.octocat
		position: relative
		width: 120px
		height: 90px
		background: #000
		top: 40px
		border-radius: 100% 100% 50% 50% /90px
		margin: 0 auto
		display: block
		&:before,
		&:after
			width: 43px
			height: 39px
			position: absolute
			top: -6px
			background: #000
			content: " "
			left: 2px
			border-radius: 73px 5px
			transform: rotate(-83deg)
		&:after
			transform: rotate(83deg)
			left: 75px
			border-radius: 5px 73px
			
		&__face
			position: absolute
			width: 100px
			height: 50px
			background: #F4CAB1
			bottom: 5px
			border-radius: 50px
			z-index: 2
			left: 10px
			box-shadow: inset 0px 2px 1px rgba(0,0,0,0.2)
		&__eye
			width: 18px
			height: 29px
			background: #FFF
			position: absolute
			top: 42px
			left: 26px
			z-index: 3
			border-radius: 50% 50% / 13px
			&-right
				left: 77px
			&__iris
				width: 14px
				height: 20px
				position: absolute
				border-radius: 50% 50%
				background: #AC5C51
				top: 4px
				left: 2px
				&:after
					content: ""
					width: 5px
					height:5px
					background: #FFF
					border-radius: 50% 50%
					position: absolute
					top: 2px
					left: 1px
		&__mouth
			width: 15px
			height: 15px
			position: absolute
			background: transparent
			border-radius: 50%
			//box-shadow: 20px 15px 0 0 #AC5C51
			border-bottom: 2px solid #ac5c51
			bottom: 8px
			left: 54px
			z-index: 2
		&__nose
			width: 6px
			height: 6px
			border-radius: 50% 50%
			background: #AC5C51
			position: absolute
			bottom: 16px
			left: 58px
			z-index: 2
		&__mustash
			width: 64px
			height: 24px
			position: absolute
			top: 64px
			z-index: 2
			left: -53px
			border-radius: 31%
			border-top: 1px solid #000
			transform: rotate(-2deg)
			&:nth-of-type(3)
				transform: rotate(-20deg)
				top: 65px
			&:nth-of-type(4)
				// transform: rotate(-20deg)
				top: 57px
			&:nth-of-type(5)
				transform: rotate(14deg)
				top: 65px
				left: 109px
			&:nth-of-type(6)
				transform: rotate(-2deg)
				top: 57px
				left: 109px	
		&:hover:after
			transform-origin: 50% 65%
		&:hover:before
			transform-origin: 50% 65%
	.about-me__character
		padding: 10px
		article
			width: 80%
			margin: 2% auto
			min-height: 400px
			border-radius: 5px
			h2
				font-size: 30px
				color: #2EE0AE
				&:nth-of-type(1)
					font-family:'Poiret One', cursive;
					font-weight: 100
			.about-me__technologies
				width: 80%
				min-height: 50px
				margin: 0 auto
				div
					height: 50px
					padding: 10px
					width: calc(100%/4 - 42px)
					display: inline-block
					border-radius: 5px
					border: 4px solid rgb(277,208,166)
					margin: 10px 5px
					vertical-align: middle
					min-width: 87px
					box-shadow: 6px 6px 4px #B3B3A6
					background: rgba(237, 195, 152, 0.38)
					h3
						color: rgb(61,187,273)
						text-align: center
						margin: 6% auto
			.about-me__languages
				width: 80%
				margin: 10px auto
				div
					display: inline-block
					vertical-align: middle
					margin: 5px 10px
					width: 100px
					height: 100px
					p
						text-align: center
		&:nth-of-type(3)
		&:nth-of-type(5)
		&:nth-of-type(6)
			min-height: 100px	
		&:nth-of-type(1)
			p
				margin: 10px 0
				color: #664C4B
				font-family:'Poiret One', cursive;
			li
				margin: 20px 0 10px 0
				&:last-of-type
					margin-bottom: 20px
				
				a
					text-decoration: none
					color: #664C4B
			.icon-plus
				margin: 0 5px 0
				&:before
					color: rgb(213,83,145)
			.icon-minus
				margin: 0 5px 0
				&:before
					color: #3DBBED
		
						
			 
					
			