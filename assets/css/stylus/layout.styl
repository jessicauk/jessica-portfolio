html
	body
		background: rgba(228, 213, 227, 0.52)
		font-family:'Roboto',sans-serif;
		font-weight: 100
		.layout-header
			// background: rgba(47, 47, 44, 0.95)
			background: rgba(102,76,75, 0.95)
			position: fixed
			top: 0
			right: 0
			left: 0
			z-index: 1
			min-height: 40px
			&-menu
				width: 50%
				margin: 0 auto
				ul
					li
						display: inline-block
						width: calc(100%/4 - 3px)
						a
							color: #FFF
							text-decoration: none
							text-align: center
							line-height: 40px
							width: 100%
							display: block
		.layout-content
			display: block
			min-height: 100vh
			margin-top: 40px
			#section1
				background: url('../images/unionjack.jpg') 50% 0 no-repeat fixed
			#section2
				background: url('../images/violin-vs-cello.jpg') 50% 0 no-repeat fixed
				article
					div
						-ms-transform: rotate(45deg)
						-webkit-transform: rotate(45deg)
						-o-transform: rotate(45deg)
						-moz-transform: rotate(45deg)
						transform: rotate(45deg)
			#section3
				background: url('../images/paisaje.jpg') 50% 0 no-repeat fixed
				article
					div
						-ms-transform: rotate(90deg)
						-webkit-transform: rotate(90deg)
						-o-transform: rotate(90deg)
						-moz-transform: rotate(90deg)
						transform: rotate(90deg)
			#section1, #section2, #section3
				min-height: 700px
				max-width: 1920px
				margin: 0px auto
				width: 100%
				position: relative
				-webkit-background-size: cover
				-moz-background-size: cover
				-o-background-size: cover
				background-size: cover
				article
					padding: 100px
					h1
						color: #FFF
						font-weight: bold
						text-align: center		
				.section-image
					background: url('../images/octocat.png')
					display: block
					height : 350px
					margin: 0 auto
					width: 350px
					-webkit-background-size: cover
					-moz-background-size: cover
					-o-background-size: cover
					background-size: cover							
			#section1, #section2
				box-shadow: 0 0 75px rgba(255, 197, 3, 0.4)
				-webkit-box-shadow:  0 0 75px rgba(255, 197, 3, 0.4)
				-moz-box-shadow:  0 0 75px rgba(255, 197, 3, 0.4)
				-o-box-shadow: 0 0 75px rgba(255, 197, 3, 0.4)
		.layout-footer
			width: 100%
			min-height: 40px
			// background: rgba(47, 47, 44, 0.95)
			background: rgba(102,76,75, 0.95)
			bottom: 0
			left: 0
			right: 0
			margin: 0
			.text
				color: #FFF
				margin: 0 auto
				width: 30%
				line-height: 40px
				p
					text-align: center


	
	
