html
	body
		background: rgba(228, 213, 227, 0.52)
		background: gris-body
		font-family:'Roboto',sans-serif
		font-weight: 100
		.section-container
			margin: 0px
			// @media screen and (max-width: 525px)
			// 	margin-top: 40px
		.layout-header
			// background: rgba(47, 47, 44, 0.95)
			//background: rgba(39, 39, 39, 0.62)
			position: fixed
			top: 0
			right: 0
			left: 0
			z-index: 4
			min-height: 40px
			width: 40px
			.hide 
				display: none
			.show 
				display: block
				transition: all 0.1s ease-out
			.menu-responsive
				display: block
				width: 40px
				height: 100%
				margin-right: 10px
				cursor: pointer
				// display: block
				background: rgba(39, 39, 39, 0.62)
				float: left
				border-radius: 5px
				margin: 5px
				position: relative
				z-index: 1
				&:hover 
					background: #000
					transition: background 0.2s ease-out
				span
					background: blanco
					height: 3px
					width: 30px
					display: block	
					margin: 5px auto
				//@media screen and (min-width: 200px)
			.menu-transform
				height: 32px
				span
					&:nth-of-type(1)
						transform: rotate(45deg)
						margin: 15px 74px 0px 5px
						transition: all 0.2s ease-in
					&:nth-of-type(2)
						transform: rotate(-45deg)
						margin: -3px 12px 0 5px
						transition: all 0.2s ease-in
					&:nth-of-type(3)
						display: none
				
			.text-menu
				position: absolute
				right: -56px
				top: 13px
				width: 52px 
				h4
					text-align: center		
			&-menu
				@media screen and (max-width: 1015px) and (min-width: 525px)
					width: 100%
				@media screen and (max-width: 524px) and (min-width: 300px)
					width: 100%
					ul
						display: none
						width: 100%
						margin: 0
						li
							width: 100% !important
				width: 280px
				margin: 0
				ul
					background: rgba(39, 39, 39, 0.62)
					display: none
					position: absolute
					left: 0
					// top: 34px
					width: 202px
					//min-height: 50vh
					@media screen and (max-width: 500px) and (min-width: 300px)
						margin-top: 0
					li
						display: block
						width: 100%
						&:first-child
							margin-top: 20px 
						&:last-child
							margin-bottom: 20px
						a
							color: blanco
							text-decoration: none
							text-align: center
							line-height: 40px
							margin: 0 auto
							width: 50%
							display: block
							font-weight: 600
							position: relative
							transform: translateZ(0)
							box-shadow: 0 0 1px rgba(0, 0, 0, 0)
							backface-visibility: hidden
							cursor: pointer
							@media screen and (max-width: 500px) and (min-width: 300px)
								&:after
									display: none
								&:hover
									background: palette-rosa3
									transition: all 0.2s ease-out
									color: blanco 
						//&:not(:first-child)
						&:nth-of-type(1)
						&:nth-of-type(2)
						&:nth-of-type(3)
							a
								&:after
									content: ""
									position: absolute
									z-index: -1
									right: 100%
									left: 0
									bottom: 0
									height: 4px
									background: palette-rosa3
									transition: right 0.3s ease-out
								&:hover:after					
									right: 0											
		.layout-content
			display: block
			min-height: 100vh
			min-width: 350px
			background: #484B54 
			.Hola
				margin-top: 30px
				height: 800px
				p
					margin-top: 60px
			.myImage
				background : url('../images/jess7.jpg') left top no-repeat fixed
				height: 85vh
				background-size: 100%
				background-position-y: -310px
				@media screen and (max-width: 800px)
					height 25vh
					background-position: 20% 0%	
			.main-block
				width: 50%
				margin: 0 auto
				@media screen and (max-width: 958px)
					width: 60%
					
				article
					width: calc(100%/2 - 57px)
					height: 250px
					margin: 30px 20px
					border: 2px solid #FFF
					display: inline-block
					cursor: pointer
					position: relative
					opacity: 1
					min-width: 209px
					min-height: 150px
					@media screen and (max-width: 1530px) and (min-width: 900px)
						height: 150px
						margin: 15px
					@media screen and (max-width: 899px) and (min-width: 601px)
						height: 100px
						min-width: none
						min-height: none
					@media screen and (max-width: 600px)
						width: auto
						display: block
						height: 100px
						min-width: none
						min-height: none
					&:hover
						.layer
							display: block
					&:first-child
						background-color: rosa-menu
					&:nth-of-type(2)
						background-color: rgb(195,168,195)
					h1
						color: blanco
						text-align: center
						margin: 15px auto
					.img-home 
						display: block
						position: relative
						min-height: 100%
						max-width: 100%
						height: 100%
						width: 100%
						// opacity: 0.5
					.layer 
						position: absolute
						top: 0
						left: 0
						right: 0
						bottom: 0
						width: 100%
						height: 100%
						background: rgba(245, 241, 241, 0.16)
						box-sizing: border-box
						transition: background .3s, opacity 0.35s, transform 0.35s
						padding: 30px
						@media screen and (max-width: 1290px) and (min-width: 1000px)
							padding: 30px
						@media screen and (max-width: 1000px)
							padding: 0px
						p, h1
							color: blanco
							text-align: center
							
				&:nth-of-type(1)
					padding-top: 30px
				&:last-child
					padding-bottom: 30px
					article
						&:first-child
							background-color: palette-verde
						&:last-child
							background-color: palette-azul		
				
			#section1
				// background: url('../images/unionjack.jpg') 50% 0 no-repeat fixed
				background: #FFF
			#section2
				// background: url('../images/violin-vs-cello.jpg') 50% 0 no-repeat fixed
				background: #FFF
				article
					div
						-ms-transform: rotate(45deg)
						-webkit-transform: rotate(45deg)
						-o-transform: rotate(45deg)
						-moz-transform: rotate(45deg)
						transform: rotate(45deg)
			#section3
				// background: url('../images/paisaje.jpg') 50% 0 no-repeat fixed
				background: #FFF
				article
					div
						-ms-transform: rotate(90deg)
						-webkit-transform: rotate(90deg)
						-o-transform: rotate(90deg)
						-moz-transform: rotate(90deg)
						transform: rotate(90deg)
			#section1, #section2, #section3
				min-height: 700px
				max-width: 1920px
				margin: 0px auto
				width: 100%
				position: relative
				-webkit-background-size: cover
				-moz-background-size: cover
				-o-background-size: cover
				background-size: cover
				article
					padding: 100px
					h1
						color: #FFF
						font-weight: bold
						text-align: center		
				.section-image
					background: #FFF
					display: block
					height : 350px
					margin: 0 auto
					width: 350px
					-webkit-background-size: cover
					-moz-background-size: cover
					-o-background-size: cover
					background-size: cover							
			#section1, #section2
				box-shadow: 0 0 75px rgba(255, 197, 3, 0.4)
				-webkit-box-shadow:  0 0 75px rgba(255, 197, 3, 0.4)
				-moz-box-shadow:  0 0 75px rgba(255, 197, 3, 0.4)
				-o-box-shadow: 0 0 75px rgba(255, 197, 3, 0.4)
		.layout-footer
			width: 100%
			min-height: 40px
			// background: rgba(47, 47, 44, 0.95)
			background: palette-negro
			bottom: 0
			left: 0
			right: 0
			margin: 0
 			.text
				color: rosa-3
				margin: 0 auto
				width: 30%
				line-height: 40px
				font-weight: 600
				p
					text-align: center

				@media screen and (max-width: 988px) and (min-width: 300px)
					width: 100%

	
	
