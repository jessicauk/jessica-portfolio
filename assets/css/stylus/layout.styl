azul-1 = rgba(57,140,255,0.95)
azul-2 = rgba(57,195,255,0.95)
azul-3 = rgba(105,210,255,0.95)
azul-4 = rgba(0,177,254,0.95)
blanco = #FFF
gris-body = #f5f7fb
negro-1 = rgba(30, 29, 29, 0.95)
purpura-1 = rgba(172,125,255,1)
purpura-2 = rgba(202,176,248,1)
rosa-menu = rgba(254, 127,122,0.95)
rosa-2 = rgba(255, 160,236,1)
rosa-3 = #F55
html
	body
		// background: rgba(228, 213, 227, 0.52)
		background: gris-body
		font-family:'Roboto',sans-serif
		font-weight: 100
		.layout-header
			// background: rgba(47, 47, 44, 0.95)
			background: rosa-menu
			position: fixed
			top: 0
			right: 0
			left: 0
			z-index: 1
			min-height: 40px
			&-menu
				width: 50%
				margin: 0 auto
				ul
					margin: 10px 0
					li
						display: inline-block
						width: calc(100%/4 - 4px)
						a
							color: rosa-3
							text-decoration: none
							text-align: center
							line-height: 40px
							// line-height: 40px
							margin: 0 auto
							width: 60%
							// width: 100%
							display: block
							font-weight: 600
							position: relative
							&:hover
								position: relative
								border-radius: 100% / 100px
								background: blanco 
								width: 60%
								transition: border-radius,background 2s linear 
							
								
		.layout-content
			display: block
			min-height: 100vh
			margin-top: 40px
			#section1
				background: url('../images/unionjack.jpg') 50% 0 no-repeat fixed
			#section2
				background: url('../images/violin-vs-cello.jpg') 50% 0 no-repeat fixed
				article
					div
						-ms-transform: rotate(45deg)
						-webkit-transform: rotate(45deg)
						-o-transform: rotate(45deg)
						-moz-transform: rotate(45deg)
						transform: rotate(45deg)
			#section3
				background: url('../images/paisaje.jpg') 50% 0 no-repeat fixed
				article
					div
						-ms-transform: rotate(90deg)
						-webkit-transform: rotate(90deg)
						-o-transform: rotate(90deg)
						-moz-transform: rotate(90deg)
						transform: rotate(90deg)
			#section1, #section2, #section3
				min-height: 700px
				max-width: 1920px
				margin: 0px auto
				width: 100%
				position: relative
				-webkit-background-size: cover
				-moz-background-size: cover
				-o-background-size: cover
				background-size: cover
				article
					padding: 100px
					h1
						color: #FFF
						font-weight: bold
						text-align: center		
				.section-image
					background: url('../images/octocat.png')
					display: block
					height : 350px
					margin: 0 auto
					width: 350px
					-webkit-background-size: cover
					-moz-background-size: cover
					-o-background-size: cover
					background-size: cover							
			#section1, #section2
				box-shadow: 0 0 75px rgba(255, 197, 3, 0.4)
				-webkit-box-shadow:  0 0 75px rgba(255, 197, 3, 0.4)
				-moz-box-shadow:  0 0 75px rgba(255, 197, 3, 0.4)
				-o-box-shadow: 0 0 75px rgba(255, 197, 3, 0.4)
		.layout-footer
			width: 100%
			min-height: 40px
			// background: rgba(47, 47, 44, 0.95)
			background: rosa-menu
			bottom: 0
			left: 0
			right: 0
			margin: 0
			.text
				color: rosa-3
				margin: 0 auto
				width: 30%
				line-height: 40px
				font-weight: 600
				p
					text-align: center


	
	
