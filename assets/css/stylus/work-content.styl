.work
	display: block
	&-content
		//padding: 0% 5%
		// border: 3px solid #f55
		width: 100%
		min-height: 100%
		display: flex
		height:100vh
		overflow: hidden
		flex-wrap: nowrap
		li
			width: calc(100%/3 - 20px)
			height: 100%
			min-width: 20vh
			max-height: 100%
			margin: 0px
			padding: 10px
			float:left
			position: relative
			display: flex
			h1
				margin: 30% auto
				text-align: center
				&:nth-of-type(3)
					color: #FFF
			&:nth-of-type(1)
				background-color: #eafb3fe6
			&:nth-of-type(2)
				background-color: #FFF
			&:nth-of-type(3)
				background-color: #368bf7
				div
					margin: 42% 30% auto
					img
						height: 40px
			&:hover
				width:40%
				box-shadow: 10px 10px 5px #888888
			div
				margin: 40% 30% auto
				img
					width: 150px
					height: 70px
					display: block
					margin:  0 auto
			div
				a
					border-radius: 2px solid #FFF	
					
				
					
				